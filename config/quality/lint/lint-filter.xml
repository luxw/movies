<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <issue id="all" severity="error">
        <ignore path="build"/>
    </issue>

    <!-- App indexing not used right now -->
    <issue id="GoogleAppIndexingWarning" severity="ignore" />

    <!-- Backup not setup -->
    <issue id="AllowBackup" severity="ignore" />

    <!-- Timber issue -->
    <issue id="ObsoleteLintCustomCheck" severity="ignore" />

    <!-- Ignore unused resources because lint doesn't know that some images are dynamically loaded -->
    <issue id="UnusedResources" severity="ignore" />

    <!-- Ignore missing density folders because we don't have all images -->
    <issue id="IconMissingDensityFolder" severity="ignore" />

    <!-- Ignore navigation errors due to multi-module configuration -->
    <issue id="InvalidNavigation" severity="ignore">
        <ignore path="app/src/main/res/navigation/app_nav_graph.xml" />
    </issue>
    <issue id="UnusedIds" severity="ignore">
        <ignore path="app/src/main/res/navigation/app_nav_graph.xml" />
    </issue>
</lint>
