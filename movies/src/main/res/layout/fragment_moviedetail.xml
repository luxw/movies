<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="movie"
            type="com.mfinatti.matheusmovies.movies.domain.model.Movie" />

        <import type="com.mfinatti.matheusmovies.movies.domain.model.extensions.MovieExtensionsKt" />
    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appBar"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/collapsingToolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:contentScrim="?attr/colorPrimary"
                app:expandedTitleMarginStart="16dp"
                app:expandedTitleMarginEnd="64dp">

                <ImageView
                    android:id="@+id/movie_backdrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:fitsSystemWindows="true"
                    app:layout_collapseMode="parallax"
                    app:image="@{MovieExtensionsKt.getBackdropUrl(movie)}"
                    tools:src="@tools:sample/backgrounds/scenic"/>

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:title="@{movie.title}"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                    app:layout_collapseMode="pin"
                    tools:title="@tools:sample/full_names"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/movie_poster"
                    android:layout_width="160dp"
                    android:layout_height="240dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    app:image="@{MovieExtensionsKt.getPosterUrl(movie)}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:src="@android:color/black"/>

                <TextView
                    android:id="@+id/movie_originalTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:textSize="20sp"
                    app:originalTitle="@{movie.originalTitle}"
                    app:layout_constraintTop_toTopOf="@id/movie_poster"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@tools:sample/full_names"/>

                <TextView
                    android:id="@+id/movie_releaseDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    app:releaseDate="@{movie.releaseDate}"
                    app:layout_constraintTop_toBottomOf="@id/movie_originalTitle"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Release date: 19 Sep 2019" />

                <TextView
                    android:id="@+id/movie_averageScore"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    app:score="@{movie.voteAverage}"
                    app:layout_constraintTop_toBottomOf="@id/movie_releaseDate"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Average score: 8.6/10" />

                <TextView
                    android:id="@+id/movie_genres"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:textSize="14sp"
                    app:genre="@{movie.genres}"
                    app:layout_constraintTop_toBottomOf="@id/movie_averageScore"
                    app:layout_constraintStart_toEndOf="@id/movie_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Genres: Adventure, Fiction"/>
                
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:lineSpacingExtra="6dp"
                    android:padding="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@{movie.overview}"
                    app:layout_constraintTop_toBottomOf="@id/movie_poster"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="@tools:sample/lorem/random"/>
                
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>
